source /share/zsh-powerlevel10k/powerlevel10k.zsh-theme

[[ -f /share/zsh-autosuggestions/zsh-autosuggestions.zsh ]] && source /share/zsh-autosuggestions/zsh-autosuggestions.zsh
[[ -f /share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]] && source /share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Aliases
alias l='eza --color=always --long --icons=always --no-user'
alias v='nvim'
alias lgt='lazygit'

# Environment
export VISUAL=nvim
export EDITOR=nvim

source ~/.config/zsh/config.zsh
autoload -Uz compinit && compinit
